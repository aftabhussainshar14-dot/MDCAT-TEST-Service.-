<body>
  <div class="container" id="accountBox">
    <h2>MDCAT TEST Service<br>Account Details</h2>
    <input type="text" id="name" placeholder="Full Name" />
    <input type="text" id="account" value="EasyPaisa: 03458051059" readonly />
    <button onclick="goToPayment()">Next</button>
  </div>  <div class="container hidden" id="paymentBox">
    <h2>Payment Verification</h2>
    <p>Enter EasyPaisa Transaction ID</p>
    <input type="text" id="txnId" placeholder="Transaction ID" />
    <button onclick="verifyTransaction()">Verify & Start Test</button>
  </div>  <div class="container hidden" id="testBox">
    <h2>MDCAT TEST</h2>
    <div class="timer">Time Left: <span id="time">60</span>s</div><div class="question">
  <p>1. HTML stands for?</p>
  <input type="radio" name="q1" value="a"> Hyper Text Markup Language<br>
  <input type="radio" name="q1" value="b"> High Text Machine Language
</div>

<div class="question">
  <p>2. JavaScript is used for?</p>
  <input type="radio" name="q2" value="a"> Styling<br>
  <input type="radio" name="q2" value="b"> Logic
</div>

<button onclick="submitTest()">Submit Test</button>

  </div>  <div class="container hidden" id="resultBox">
    <h2>Result</h2>
    <p id="result"></p>
  </div>  <!-- Admin Panel -->  <div class="container hidden" id="adminBox">
    <h2>Admin Panel (Add MCQs)</h2>
    <input type="password" id="adminPass" placeholder="Admin Password" />
    <button onclick="loginAdmin()">Login</button><div id="adminArea" class="hidden">
  <input type="text" id="qText" placeholder="Question" />
  <input type="text" id="optA" placeholder="Option A" />
  <input type="text" id="optB" placeholder="Option B" />
  <input type="text" id="correct" placeholder="Correct Option (a/b)" />
  <button onclick="addQuestion()">Add Question</button>
</div>

  </div>  <script>
    let paid = false;
    let timeLeft = 60;
    let timer;
    let questions = [];

    function goToPayment(){
      document.getElementById('accountBox').classList.add('hidden');
      document.getElementById('paymentBox').classList.remove('hidden');
    }

    function verifyTransaction(){
      const tx = document.getElementById('txnId').value.trim();
      if(tx.length < 6){
        alert('Please enter valid Transaction ID');
        return;
      }
      paid = true;
      document.getElementById('paymentBox').classList.add('hidden');
      document.getElementById('testBox').classList.remove('hidden');
      loadQuestions();
      startTimer();
    }

    function startTimer(){
      timer = setInterval(()=>{
        timeLeft--;
        document.getElementById('time').innerText = timeLeft;
        if(timeLeft <= 0){
          clearInterval(timer);
          submitTest();
        }
      },1000);
    }

    function loadQuestions(){
      let box = document.getElementById('testBox');
      questions.forEach((q,i)=>{
        let div = document.createElement('div');
        div.className = 'question';
        div.innerHTML = `<p>${i+1}. ${q.q}</p>
        <input type="radio" name="q${i}" value="a"> ${q.a}<br>
        <input type="radio" name="q${i}" value="b"> ${q.b}`;
        box.insertBefore(div, box.lastElementChild);
      });
    }

    function submitTest(){
      clearInterval(timer);
      let score = 0;
      questions.forEach((q,i)=>{
        let ans = document.querySelector(`input[name=q${i}]:checked`);
        if(ans && ans.value === q.c) score++;
      });
      document.getElementById('testBox').classList.add('hidden');
      document.getElementById('resultBox').classList.remove('hidden');
      document.getElementById('result').innerText = `Your Score: ${score}/${questions.length}`;
    }

    // Admin
    function loginAdmin(){
      if(document.getElementById('adminPass').value === 'admin123'){
        document.getElementById('adminArea').classList.remove('hidden');
      }else{
        alert('Wrong Password');
      }
    }

    function addQuestion(){
      questions.push({
        q: qText.value,
        a: optA.value,
        b: optB.value,
        c: correct.value
      });
      alert('Question Added');
      qText.value = optA.value = optB.value = correct.value = '';
    }
  </script></body>
</html>
